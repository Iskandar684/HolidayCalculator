<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <command
            id="holiday.calculator.ui.command.open.incoming"
            name="%open.incoming.menuitem.name">
      </command>
      <command
            id="holiday.calculator.ui.command.take.holiday"
            name="%take.holiday.menuitem.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="ru.iskandar.holiday.calculator.ui.NavigationViewPart"
            fastViewWidthRatio="0.27"
            id="ru.iskandar.holiday.calculator.ui.NavigationViewPart"
            name="%navigation.view.name"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="ru.iskandar.holiday.calculator.ui.takeholiday.TakeHolidayEditor"
            default="false"
            id="ru.iskandar.holiday.take.editor"
            name="%holiday.take.view.name">
      </editor>
      <editor
            class="ru.iskandar.holiday.calculator.ui.incoming.IncomingStatementsEditor"
            default="false"
            id="holiday.calculator.ui.editor.incoming"
            name="%incoming.statements.editor.name">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            class="ru.iskandar.holiday.calculator.ui.menu.RootMenuContribution"
            locationURI="menu:org.eclipse.ui.main.menu">
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="ru.iskandar.holiday.calculator.ui.menu.handlers.TakeHolidayAction"
            commandId="holiday.calculator.ui.command.take.holiday">
      </handler>
   </extension>

</plugin>
